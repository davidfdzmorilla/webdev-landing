---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import FeatureCard from '../components/FeatureCard.astro';
import Newsletter from '../components/Newsletter.astro';

const features = [
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
    title: 'Lightning Fast',
    description: 'Optimized for speed with static generation and minimal JavaScript.',
  },
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>',
    title: 'Fully Responsive',
    description: 'Perfect display on all devices from mobile to desktop.',
  },
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>',
    title: 'Form Validation',
    description: 'Built-in validation for all forms with real-time feedback.',
  },
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" /></svg>',
    title: 'Modern Design',
    description: 'Clean, professional design with dark mode support.',
  },
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>',
    title: 'Developer Friendly',
    description: 'Built with Astro and Tailwind CSS for easy customization.',
  },
  {
    icon: '<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>',
    title: 'SEO Optimized',
    description: 'Built-in SEO best practices for better search rankings.',
  },
];
---

<BaseLayout
  title="WebDev Landing - Modern Landing Page"
  description="Professional landing page with interactive forms, validation, and modern design"
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 py-24"
  >
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-4xl text-center">
        <h1 class="mb-6 text-5xl font-bold text-white md:text-6xl lg:text-7xl">
          Build Amazing Landing Pages
        </h1>
        <p class="mb-8 text-xl text-indigo-100 md:text-2xl">
          Professional, responsive, and conversion-focused landing pages with modern design and
          interactive forms.
        </p>
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="#contact"
            class="inline-flex items-center rounded-lg bg-white px-8 py-4 text-lg font-medium text-indigo-600 transition-all hover:scale-105 hover:shadow-lg"
          >
            Get Started
          </a>
          <a
            href="#features"
            class="inline-flex items-center rounded-lg border-2 border-white px-8 py-4 text-lg font-medium text-white transition-all hover:bg-white/10"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>

    <!-- Decorative background elements -->
    <div class="absolute left-0 top-0 -z-10 h-full w-full overflow-hidden opacity-20">
      <div class="absolute -left-32 -top-32 h-64 w-64 rounded-full bg-white blur-3xl"></div>
      <div class="absolute -right-32 top-64 h-96 w-96 rounded-full bg-white blur-3xl"></div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="bg-slate-50 py-24 dark:bg-slate-800">
    <div class="container mx-auto px-4">
      <div class="mx-auto mb-16 max-w-3xl text-center">
        <h2 class="mb-4 text-4xl font-bold text-slate-900 dark:text-white md:text-5xl">
          Powerful Features
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400">
          Everything you need to create stunning landing pages that convert visitors into customers.
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          features.map((feature) => (
            <FeatureCard
              icon={feature.icon}
              title={feature.title}
              description={feature.description}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-24">
    <div class="container mx-auto px-4">
      <ContactForm />
    </div>
  </section>

  <!-- Newsletter Section -->
  <section id="newsletter" class="bg-slate-50 py-24 dark:bg-slate-800">
    <div class="container mx-auto px-4">
      <Newsletter />
    </div>
  </section>

  <Footer />
</BaseLayout>
